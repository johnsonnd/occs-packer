#!/bin/bash

declare -a arr=("ansible-role-800-53"
                "ansible-role-aws"
                "ansible-role-awslogs"
                "ansible-role-directories"
                "ansible-role-nlminit"
                "ansible-role-cloud-init"
                "ansible-role-splunk-forwarder"
               )

for i in "${arr[@]}"
do
  if [[ ! -d ansible/roles/${i} ]]; then
    git clone git@github.com:NLM-OCCS/${i}.git ansible/roles/${i}
  else
    cd ansible/roles/${i}
    git pull
    cd ../../..
  fi
done
