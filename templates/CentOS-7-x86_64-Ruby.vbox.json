{
  "description": "CentOS 7 Machine Images",

  "variables": {
    "aws_access_key": "{{ env `OCCS_PACKER_AWS_ACCESS_KEY` }}",
    "aws_secret_key": "{{ env `OCCS_PACKER_AWS_SECRET_KEY` }}",
    "aws_s3_bucket_name": "occs-ami-importbucket",
    "boot_wait": "5s",
    "headless": "{{ env `OCCS_PACKER_HEADLESS` }}",
    "http_directory": "http",
    "iso_url": "http://mirrors.kernel.org/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
    "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
    "iso_checksum_type": "sha256",
    "lsb_release": "7.3",
    "machine_cpus": "2",
    "machine_disk_size": "22528",
    "machine_memory": "1024",
    "machine_vram": "16",
    "outputs_directory": "builds",
    "shutdown_delay": "0",
    "vm_name": "centos7-ruby",
    "password": "{{ env `OCCS_PACKER_ROOT_PASSWORD` }}",
    "user": "root",
    "version": "7.3"
   },

  "builders": [
    {
     "type": "virtualbox-iso",
     "name": "centos7-ami-base",
     "boot_command":
     [
       "<tab> linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg vga=791<enter><wait>"
     ],
     "boot_wait": "{{ user `boot_wait` }}",
     "disk_size": "{{ user `machine_disk_size` }}",
     "format": "ova",
     "guest_additions_mode": "disable",
     "guest_os_type": "RedHat_64",
     "headless": "{{ user `headless` }}",
     "hard_drive_interface": "sata",
     "http_directory": "{{ user `http_directory` }}",
     "iso_url": "{{ user `iso_url` }}",
     "iso_checksum": "{{ user `iso_checksum` }}",
     "iso_checksum_type": "{{ user `iso_checksum_type` }}",
     "output_directory": "{{ user `outputs_directory` }}/{{ user `vm_name` }}_{{build_name}}/",
     "shutdown_command": "/usr/sbin/halt -p",
     "ssh_password": "{{ user `password` }}",
     "ssh_username": "{{ user `user` }}",
     "ssh_wait_timeout": "60m",
     "vboxmanage": [
       ["modifyvm", "{{.Name}}", "--cpus", "{{ user `machine_cpus` }}"],
       ["modifyvm", "{{.Name}}", "--memory", "{{ user `machine_memory` }}"],
       ["modifyvm", "{{.Name}}", "--vram", "{{ user `machine_vram` }}"]
     ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "remote_folder": "/root",
      "inline": [
        "yum -y install ansible",
        "sed -i '/^UUID/d' /etc/sysconfig/network-scripts/ifcfg-enp0s3"
      ]
    },
    {
      "type": "file",
      "only": [ "centos7-ami-base" ],
      "source": "files/tmp/CloudWatchMonitoringScripts-1.2.1.zip",
      "destination": "/tmp/CloudWatchMonitoringScripts-1.2.1.zip",
      "direction": "upload"
    },
    {
      "type": "file",
      "only": [ "centos7-ami-base" ],
      "source": "files/usr/local/bin/retrieve-creds.sh",
      "destination": "/usr/local/bin/retrieve-creds.sh",
      "direction": "upload"
    },
    {
      "type": "ansible-local",
      "only": [ "centos7-ami-base" ],
      "playbook_file": "ansible/playbooks/ruby.yml",
      "role_paths": [
        "ansible/roles/ansible-cloud-init",
        "ansible/roles/ansible-directories",
        "ansible/roles/ansible-aws",
        "ansible/roles/ansible-800-53",
        "ansible/roles/occsab-platform",
        "ansible/roles/occsab-httpd",
        "ansible/roles/occsab-passenger",
        "ansible/roles/occsab-ruby"
      ]
    },
    {
      "type": "shell",
      "remote_folder": "/root",
      "inline": [
        "sleep {{ user `shutdown_delay` }}"
      ]
    }
  ],
   "post-processors": [
     {
       "type": "vagrant",
       "keep_input_artifact": true,
       "output": "{{ user `outputs_directory` }}/{{ user `vm_name` }}_{{ .BuildName }}.box"
     },
     {
       "type": "amazon-import",
       "ami_name": "packer_{{ user `vm_name` }}_{{ timestamp }}",
       "access_key": "{{ user `aws_access_key` }}",
       "secret_key": "{{ user `aws_secret_key` }}",
       "region": "us-east-1",
       "s3_bucket_name": "{{ user `aws_s3_bucket_name` }}",
       "skip_clean": false,
       "tags": {
         "release": "latest",
         "builder": "Packer",
         "description": "CentOS 7 RubyApp Image",
         "timestamp": "{{ timestamp }}",
         "lsb_distributor": "CentOS",
         "lsb_release": "{{ user `lsb_release` }}"
       }
     }
   ]
}
